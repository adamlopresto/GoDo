<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="fake.domain.adamlopresto.godo"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="fake.domain.adamlopresto.godo.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="fake.domain.adamlopresto.godo.GoDoContentProvider"
            android:authorities="fake.domain.adamlopresto.godo.contentprovider"
            android:exported="false" >
        </provider>

        <activity
            android:name="fake.domain.adamlopresto.godo.ContextsActivity"
            android:label="@string/title_activity_contexts"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name="fake.domain.adamlopresto.godo.TaskActivity"
            android:label="@string/title_activity_task"
            android:parentActivityName=".MainActivity"
            android:windowSoftInputMode="stateHidden" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name="fake.domain.adamlopresto.godo.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name="fake.domain.adamlopresto.godo.TaskerPluginEditActivity"
            android:label="@string/title_activity_tasker_plugin_edit" >
            <intent-filter>
                <action android:name="com.twofortyfouram.locale.intent.action.EDIT_SETTING" />
            </intent-filter>
        </activity>

        <receiver
            android:name="fake.domain.adamlopresto.godo.GoDoReceiver"
            android:enabled="true"
            android:exported="true"
            tools:ignore="ExportedReceiver" >
            <intent-filter>
                <action android:name="com.twofortyfouram.locale.intent.action.FIRE_SETTING" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <activity
            android:name="fake.domain.adamlopresto.godo.TaskRepetitionRuleActivity"
            android:label="@string/title_activity_task_repetition_rule" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".TaskActivity" />
        </activity>

        <service
            android:name="fake.domain.adamlopresto.godo.NotificationService"
            android:enabled="true"
            android:exported="false" >
        </service>

        <receiver android:name="fake.domain.adamlopresto.godo.GoDoAppWidget" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/go_do_app_widget_info" />
        </receiver>

        <service
            android:name="fake.domain.adamlopresto.godo.GoDoWidgetService"
            android:enabled="true"
            android:exported="false" android:permission="android.permission.BIND_REMOTEVIEWS">
        </service>
    </application>

</manifest>